mixin map(parameter)
	-var parameter = parameter || {};
	-var eventName = parameter.eventName || 'Meet us!';
	-var address = parameter.address || '1259 california st san francisco, ca';

	//-

	.map
		script(src=`https://maps.googleapis.com/maps/api/js?key=
				AIzaSyCSbefNxVIvZSmp13U_lnqYHY-z8XNefbc
				&callback=initMap`,
			async='',
			defer='')

	.map__info
		.map__event
			p.map__event-title= eventName
		.map__address
			p.map__address-title= address

		.map__control
			.map__element.map__element-target
			.map__element.map__element-marker
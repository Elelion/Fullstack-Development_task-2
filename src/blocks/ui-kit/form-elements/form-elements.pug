mixin form-elements(parameter)
	-var parameter = parameter || {};
	-var generalTitleEnabled = parameter.generalTitleEnabled || 'true';
	-var generalTitle = parameter.generalTitle || 'form elements';

	-var feedBackEnabled = parameter.feedBackEnabled || 'true';
	-var feedBackButtonTitle = parameter.feedBackButtonTitle || 'click me';

	-var togglesTitle = parameter.togglesTitle || 'toggles';
	-var togglesTitleEnabled = parameter.togglesTitleEnabled || 'true';
	-var togglesEnabled = parameter.togglesEnabled || 'true';

	-var tickTitleBoxes = parameter.tickTitleBoxes || 'tick boxes';
	-var tickBoxesTitleEnabled = parameter.tickBoxesTitleEnabled || 'true';
	-var tickBoxesEnabled = parameter.tickBoxesEnabled || 'true';

	//-

	mixin form-elements__feed-back
		.form-elements__feed-back
			+feed-back({buttonName: feedBackButtonTitle})

	//-

	mixin form-elements__toggless
		case togglesTitleEnabled
			when 'true'
				.form-elements__toggles
					.form-elements__toggles-title
						+chapter__title(togglesTitle)
						+toggles

			default
				.form-elements__toggles
					+toggles

	//-

	mixin form-elements__ticks
		case tickBoxesTitleEnabled
			when 'true'
				.form-elements__ticks
					.form-elements__ticks-title
						+chapter__title(tickTitleBoxes)
						+tick-boxes

			default
				.form-elements__ticks
				+tick-boxes

	//-

	case generalTitleEnabled
		when 'true'
			section.form-elements
				.form-elements__title
					+chapter__title(generalTitle)

				.form-elements__content
					if (feedBackEnabled === 'true')
						+form-elements__feed-back

					if (togglesEnabled === 'true')
						+form-elements__toggless

					if (tickBoxesEnabled === 'true')
						+form-elements__ticks
		default
			.form-elements__content
				+form-elements__feed-back
				+form-elements__toggless
				+form-elements__ticks

